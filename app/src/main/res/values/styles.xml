<resources>
    <!-- Base application theme -->
    <style name="Theme.MovieFind" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <style name="AccentButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/accent_color</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">0dp</item>
        <item name="rippleColor">@color/accent_light</item>
    </style>

    <!-- Dark dialog theme -->
    <style name="DarkAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle.Negative</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <!-- Dialog title style -->
    <style name="DialogTitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Dialog button styles -->
    <style name="DialogButtonStyle.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogButtonStyle.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Add other existing styles below if you have them -->

</resources>